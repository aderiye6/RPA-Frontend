{
  "name": "Create React App Sample",
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "devtools_page": "index.html",
  "action":{
    "default_popup": "popup.html",
    "default_title": "the popup"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["popup.js"]
  }],
  "permissions": ["scripting", "debugger", "tabs", "activeTab", "contextMenus", "storage",  "tabs",  "activeTab"],

  "host_permissions":[
    "https://*/*",
    "http://*/*",
    "<all_urls>"
  ]
}


